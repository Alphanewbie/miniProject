<mapper namespace="resource.prodReviewMapper">
	
 	<select id="selectReview"  resultType="vo.ProdReviewVO" parameterType="_int">
 		select reViewID, IDCord, NickName, IDEmail, prodID, viewTitle, to_char(ViewDate,'yyyy"년" mm"월" dd"일"') AS ViewDate, ViewContenxt, Viewcnt, ViewUpCnt, ViewImg, ViewStar, ViewPoice
		from prodReview
		where reViewID=#{id}
 	</select>
 	
